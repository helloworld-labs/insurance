  <sql id="getFssBankUserPagingWhere">
		<if test="bankId != null">
			and t1.bank_id =#{bankId}
		</if>
		<if test="bkuserName != null and bkuserName != ''">
			and t1.bkuser_name like concat('%',#{bkuserName},'%')
		</if>
		
		<if test="name != null and name != ''">
			and t1.name like concat('%',#{name},'%')
		</if>
		
	</sql>
	
	<select id="getFssBankUserPaging" parameterType="map"
		resultMap="FssBankUserQueryBaseResultMap">
		select
		 t1.bkuser_id, 
	     t1.bkuser_name, 
	     t1.bank_id, 
	     t1.phone, 
	     t1.name, 
	     t1.ctime, 
	     t1.mtime, 
	     t1.remark,
	     t2.bank_name, 
	     t2.branch_name, 
		 t2.province_name, 
		 t2.city_name, 
		 t2.area_name
    
		from fss_bank_user t1
		left join fss_bank t2 on t1.bank_id=t2.bank_id
		where 1=1
		<include refid="getFssBankUserPagingWhere"/>
		limit #{_offset}, #{_limit}
	</select>
	
	<select id="getFssBankUserPagingCount" parameterType="map"
		resultType="java.lang.Integer">
