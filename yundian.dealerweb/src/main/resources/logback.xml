<configuration scan="true" scanPeriod="30 seconds">
    <jmxConfigurator/>
    <property file="cls-web.conf"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date [%thread] %-5level %class.%method - %X{rule} - %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="Rolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${BANK_WEB_HOME}/logs/web.log</file>
        <!--<filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator name="myEval_service">
                <expression>message.contains("service.impl")</expression>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${BANK_WEB_HOME}/logs/web-%d{yyyyMMdd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <!-- encoders are assigned the type
           ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %class.%method - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="Rolling"/>
        <!--<appender-ref ref="STDOUT"/>-->
        <!--<appender-ref ref="Redis" />-->
    </root>


    <logger name="System" level="INFO">
        <appender-ref ref="NT"/>
    </logger>

    <logger name="com.cgw360" level="DEBUG"/>
    <logger name="org.mybatis" level="ERROR"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.alibaba" level="ERROR"/>
    <logger name="com.mchange.v2" level="ERROR"/>

</configuration>
