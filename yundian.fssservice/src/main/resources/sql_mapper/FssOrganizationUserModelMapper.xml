	    	t1.remark,
	    	 t2.organization_name,
	    	 t2.province_name, 
			 t2.city_name, 
			 t2.area_name
    
		from fss_organization_user t1
		left join fss_organization t2
		on t1.organization_id=t2.organization_id
		where 1=1
