	<sql id="getFssOrganizationUserPagingWhere">
		<if test="organizationId != null">
			and t1.organization_id =#{organizationId}
		</if>
		<if test="orguserName != null and orguserName != ''">
			and t1.orguser_name like concat('%',#{orguserName},'%')
		</if>
		
		<if test="name != null and name != ''">
			and t1.name like concat('%',#{name},'%')
		</if>
		
	</sql>
	
	<select id="getFssOrganizationUserPaging" parameterType="map"
		resultMap="FssOrganizationUserQueryBaseResultMap">
		select
			t1.orguser_id, 
